<dashboard>
  
    <mugloverrides>
      <element name="window">
        <attribute name="margin" value="0" />
        <attribute name="border" value="0" />
        <attribute name="padding" value="0" />
      </element>
      <element name="plotarea">
        <attribute name="marginleft" value="34" />
        <attribute name="marginright" value="18" />
        <attribute name="margintop" value="4" />
        <attribute name="marginbottom" value="6" />
      </element>
      <element name="legend">
        <attribute name="visible" value="false" />
      </element>
      <element name="horizontalaxis">
        <attribute name="tickcolor" value="0xdddddd" />
        <element name="labels">
          <attribute name="format" value="%Y" visible="false" />
          <attribute name="fontcolor" value="0x666666" />
        </element>
        <element name="pan">
          <attribute name="allowed" value="yes" />
        </element>
        <element name="zoom">
          <attribute name="allowed" value="yes" />
        </element>
        <element name="grid">
          <attribute name="color" value="0xdddddd" />
        </element>
        <element name="binding">
          <attribute name="min" value="1900" />
          <attribute name="max" value="2000" />
        </element>
      </element>
      <element name="verticalaxis">
        <attribute name="tickcolor" value="0xdddddd" />
        <element name="labels">
          <attribute name="fontcolor" value="0x666666" />
        </element>      
        <element name="pan">
          <attribute name="allowed" value="no" />
        </element>
        <element name="zoom">
          <attribute name="allowed" value="no" />
        </element>
        <element name="grid">
          <attribute name="color" value="0xdddddd" />
        </element>
      </element>
      <elements name="datatips">
      	<attribute name="border" value="1" />
        <attribute name="bgcolor" value="0x33383b" />
        <attribute name="bordercolor" value="0x5b6473" />
        <attribute name="fontcolor" value="0xffffff" />
        <attribute name="fontsize" value="14" />
        <attribute name="bold" value="true" />
        <attribute name="pad" value="2" />
      </elements>
    </mugloverrides>


    <tabRef id="climateChange" />
    <tabRef id="climateVariability" />
    <tabRef id="climateProjections" />

   <intro>
     <ns0:TextFlow fontFamily="Arial" xmlns:ns0="http://ns.adobe.com/textLayout/2008"><ns0:p textAlign="center"><ns0:span fontSize="18" fontWeight="bold">Global Climate Dashboard</ns0:span></ns0:p><ns0:p><ns0:span fontWeight="bold" /></ns0:p><ns0:p><ns0:span fontSize="12" fontWeight="bold">Just as the dashboard of a car gives you a quick look at the status of your vehicle, the global climate dashboard gives you a quick look at the status of Earth’s climate system. The interactive graphs let you explore climate-relevant measurements and the relationships among them for different time periods.</ns0:span></ns0:p>
       <ns0:p><ns0:span fontSize="12" fontWeight="bold" /></ns0:p>
       <ns0:p paragraphStartIndent="30" tabStops="s30" textIndent="-15"><ns0:span fontSize="12">•<ns0:tab /></ns0:span><ns0:span fontSize="12" fontWeight="bold">Adjust the time slider, or click and drag within a graph, to change the time period displayed.</ns0:span></ns0:p>
       <ns0:p paragraphStartIndent="30" tabStops="s30" textIndent="-15"><ns0:span fontSize="12">•<ns0:tab /></ns0:span><ns0:span fontSize="12" fontWeight="bold">Click and drag data labels up from the list at the bottom to display their graphs.</ns0:span></ns0:p>
       <ns0:p paragraphStartIndent="30" tabStops="s30" textIndent="-15"><ns0:span fontSize="12">•<ns0:tab /></ns0:span><ns0:span fontSize="12" fontWeight="bold">Click the question mark next to any graph for a brief description of the parameter.</ns0:span></ns0:p>
       <ns0:p paragraphStartIndent="30" tabStops="s30" textIndent="-15"><ns0:span fontSize="12">•<ns0:tab /></ns0:span><ns0:span fontSize="12" fontWeight="bold">Click Read More… to access an overview article about the parameter, including a larger version of the graph and the opportunity to download the data.</ns0:span></ns0:p>
     </ns0:TextFlow>
  </intro>
  
    
  
  <timeline>
    <mugloverrides>
      <element name="plotarea">
        <attribute name="marginbottom" value="15" />
      </element>
      <element name="horizontalaxis">
        <attribute name="linewidth" value="0" />
        <attribute name="tickcolor" value="0x666666" />
        <element name="grid">
          <attribute name="color" value="0x666666" />
        </element>
        <element name="labels">
          <attribute name="visible" value="true" />
        </element>
      </element>
      <element name="verticalaxis">
        <element name="pan">
          <attribute name="allowed" value="yes" />
        </element>
        <element name="grid">
          <attribute name="visible" value="false" />
        </element>
      </element>
    </mugloverrides>
    <mugl>
      <window border="0" margin="0" padding="0" />
      <legend visible="false" />
      <plotarea marginbottom="15" marginleft="25" marginright="20" margintop="0" />
      <horizontalaxis id="year" linewidth="0" max="2100" min="1950" tickmax="5" tickmin="-2" tickwidth="1" type="datetime">
        <labels position="0 0">
          <label format="%Y" spacing="200Y 100Y 50Y 20Y 10Y 5Y 2Y 1Y" />
          <label format="%n %Y" spacing="6M 3M 2M 1M" />
        </labels>
        <title />
        <grid />
        <pan max="2500" min="1600" />
        <zoom min="2" />
        <binding id="timebinding" max="2000" min="1900" />
      </horizontalaxis>
      <verticalaxis base="-2 -1" id="y" linewidth="0" max="1" min="-1" type="number">
        <labels />
        <title />
        <pan allowed="no" />
        <zoom allowed="no" />
      </verticalaxis>
      <data>
        <variables>
          <variable column="0" id="x" type="datetime" />
          <variable column="1" id="y" />
        </variables>
        <values>
        </values>
      </data>
    </mugl>
  </timeline>
  
  
</dashboard>
